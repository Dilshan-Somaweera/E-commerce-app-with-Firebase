<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="355dp"
        android:layout_height="599dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="162dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="130dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/rectangle_back">

        <Button
            android:id="@+id/categorytoremovebtn"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:layout_marginStart="115dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="120dp"
            android:background="@drawable/button_back"
            android:text="Remove Category"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.524"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerremovecat" />

        <Spinner
            android:id="@+id/spinnerremovecat"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="111dp"
            android:background="@drawable/spinnerback_middle"
            android:singleLine="true"
            android:spinnerMode="dropdown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.48"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <EditText
            android:id="@+id/updatecat"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginStart="92dp"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="110dp"
            android:background="@drawable/textoutline"
            android:ems="10"
            android:hint="     Enter the name"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="#f85984"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.461"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/categorytoremovebtn" />

        <Button
            android:id="@+id/categorytoupdatebtn"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:layout_marginStart="51dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/button_back"
            android:text="Update Category"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/updatecat" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="198dp"
            android:layout_height="41dp"
            android:layout_marginTop="72dp"
            android:text="Select a Category to Remove or Update :"
            android:textAlignment="center"
            android:textColor="#440381"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="166dp"
            android:layout_height="38dp"
            android:layout_marginTop="12dp"
            android:text="update the category name here:"
            android:textAlignment="center"
            android:textColor="#440381"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/categorytoremovebtn" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>