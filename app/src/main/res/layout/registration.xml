<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="352dp"
        android:layout_height="381dp"
        android:background="@drawable/rectangle_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.537">

        <EditText
            android:id="@+id/Regemail"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="96dp"
            android:layout_marginEnd="53dp"
            android:background="@drawable/textoutline_corner"
            android:drawableLeft="@drawable/baseline_person_24"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="15dp"
            android:textColor="#BFAFAF"
            android:textColorHint="#f85984"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.424"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/Regpassword"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="53dp"
            android:background="@drawable/textmiddle"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:textColor="#BFAFAF"
            android:textColorHint="#f85984"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.424"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/User_Address" />

        <EditText
            android:id="@+id/User_Address"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="53dp"
            android:background="@drawable/textmiddle"
            android:drawableLeft="@drawable/baseline_email_24"
            android:ems="10"
            android:hint="Address"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:textColor="#BFAFAF"
            android:textColorHint="#f85984"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.424"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Regemail" />

        <EditText
            android:id="@+id/lastname"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:background="@drawable/textoutline"
            android:drawableLeft="@drawable/baseline_phone_24"
            android:ems="10"
            android:hint="Phone number"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:textColor="#BFAFAF"
            android:textColorHint="#f85984"
            android:textStyle="bold"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="14dp"
            tools:layout_editor_absoluteY="39dp" />

        <EditText
            android:id="@+id/confirmpassword"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="53dp"
            android:background="@drawable/textoutline_cornerbottem"
            android:drawableLeft="@drawable/baseline_phone_24"
            android:ems="10"
            android:hint="Confirm password"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:textColor="#BFAFAF"
            android:textColorHint="#f85984"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.424"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Regpassword"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/Reguser"
            android:layout_width="54dp"
            android:layout_height="51dp"
            android:background="@drawable/buttonshape"
            android:backgroundTint="#f85984"
            android:text=">"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/confirmpassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/Regemail"
            app:layout_constraintVertical_bias="0.503" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-15dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/btm" />

</androidx.constraintlayout.widget.ConstraintLayout>